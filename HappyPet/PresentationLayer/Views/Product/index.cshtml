@model IEnumerable<HappyPetDtoLayer.Dtos.ProductDto>
@{
    ViewBag.Title = "Product Listing";
}

<h2>Products</h2>

<form action="@Url.Action("ProductsByCategory", "Product")" method="get">
    <label for="category">Category:</label>
    <select name="categoryId" id="category">
        <!-- Populate categories here -->
    </select>
    <input type="submit" value="Filter by Category" />
</form>

<form action="@Url.Action("ProductsByBrand", "Product")" method="get">
    <label for="brand">Brand:</label>
    <select name="brandId" id="brand">
        <!-- Populate brands here -->
    </select>
    <input type="submit" value="Filter by Brand" />
</form>

<table>
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.Price.ToString("C")</td>
            <td>
                <a href="@Url.Action("AddToBasket", "Basket", new { userId = 1 /* Replace with actual user ID */, productId = product.ProductID, quantity = 1 })">Add to Basket</a>
            </td>
        </tr>
    }
</table>
